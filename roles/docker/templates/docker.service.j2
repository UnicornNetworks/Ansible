# {{ ansible_managed }}

[Unit]
Description=Docker Application Container Engine
Documentation=https://docs.docker.com
After=network.target docker.socket
Requires=docker.socket

[Service]
Type=notify
{% if ansible_distribution == "Ubuntu" %}
ExecStart=/usr/bin/docker daemon {{ daemon_opts }}
{% else %}
ExecStart=/usr/bin/docker daemon --icc=false -H fd://
{% endif %}
MountFlags=slave
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity
TasksMax=1048576
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
